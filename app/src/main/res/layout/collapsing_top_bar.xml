<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/button_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/icon_primary"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:minHeight="24dp"
            android:minWidth="24dp"
            android:src="@drawable/ic_round_wifi_24"
            app:tint="@color/colorOnSurface"/>

    </FrameLayout>

    <TextView
        android:id="@+id/text"
        tools:ignore="hardcodedText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Placeholder Header"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_primary"
        app:layout_constraintEnd_toStartOf="@id/button_secondary"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

    <FrameLayout
        android:id="@+id/button_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/icon_secondary"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:minHeight="24dp"
            android:minWidth="24dp"
            android:src="@drawable/ic_round_wifi_24"
            app:tint="@color/colorOnSurface"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>