<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action required"
        style="@style/MaterialAlertDialog.Material3.Title.Text"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_header_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow sending notifications"
        style="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/group_body_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_explain_notifications"
        style="@style/MaterialAlertDialog.Material3.Body.Text"
        app:layout_constraintTop_toBottomOf="@id/group_header_notifications"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/group_header_shizuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant the permission to use Shizuku"
        style="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/group_body_notifications"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/group_body_shizuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_explain_shizuku"
        style="@style/MaterialAlertDialog.Material3.Body.Text"
        app:layout_constraintTop_toBottomOf="@id/group_header_shizuku"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/button_grant_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_grant_permissions"
        app:layout_constraintTop_toBottomOf="@id/group_body_shizuku"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.Material3.Button" />

    <Button
        android:id="@+id/button_get_more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_learn_more"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_body_shizuku" />

</androidx.constraintlayout.widget.ConstraintLayout>
