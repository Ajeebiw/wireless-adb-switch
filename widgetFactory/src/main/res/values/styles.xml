<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WidgetFactory.PreferenceCategory" parent="">
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="layout">@layout/preference_category_custom</item>
    </style>

    <style name="Theme.WidgetFactory.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat">
        <item name="layout">@layout/preference_base</item>
        <item name="widgetLayout">@layout/preference_switch_compat</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="Theme.WidgetFactory.SliderPreference" parent="Preference">
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">true</item>
        <item name="selectable">false</item>
    </style>

    <style name="Theme.WidgetFactory.DialogPreference" parent="Preference.DialogPreference">
        <item name="layout">@layout/preference_base</item>
    </style>

    <style name="Theme.WidgetFactory.Preference" parent="Preference">
        <item name="layout">@layout/preference_base</item>
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerAfterLastItem">false</item>
    </style>

</resources>